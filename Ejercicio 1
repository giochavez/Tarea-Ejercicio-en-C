#include <stdio.h>

int main()
{
    int a,b,n;

 printf("Ingrese nÃºmero de filas: ");
    scanf("%d", &n);

    for(a=n; a>=1; a--){
        // primera parte
        for(b=1; b<=a; b++){
            printf("%d", b);
        }

        // los espacios
        for(b=a*2; b<n*2; b++){
            printf(" ");
        }
        // segunda parte
        for(b=a; b>=1; b--){
            printf("%d", b);
        }

        printf("\n");
    }

    return 0;
}
